{
	"manifest_version": 2,

	"name": "MM FE-tools",
	"description": "阿里妈妈前端工具集",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "icon_off.png"
	},
	"content_scripts": [{
		"matches": ["https://*.taobao.com/*"],
		"js": ["jquery-2.0.0.min.js", "clipboard.min.js", "content.js"]
	}],
	"permissions": [
		"activeTab",
		"https://*.taobao.com/*"
	]
}
